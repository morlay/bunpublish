{
  "name": "@morlay/bunpublish",
  "version": "0.3.0",
  "type": "module",
  "license": "MIT",
  "description": "Publish packages to npm registry with [Bun](https://bun.sh/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/morlay/bunpublish.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1"
  },
  "dependencies": {
    "@npmcli/arborist": "^7.3.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "globby": "^14.0.1",
    "libnpmpublish": "^9.0.4",
    "npm-registry-fetch": "^16.1.0",
    "pacote": "^18.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.6",
    "@types/libnpmpublish": "^4.0.6",
    "@types/pacote": "^11.1.8",
    "bun-types": "^1.0.28",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "bin": {
    "bunpublish": "bin/index.ts"
  },
  "exports": {
    "bun": "./src/index.ts"
  },
  "files": [
    "bin/*.ts",
    "src/*.ts",
    "!**/__tests__"
  ],
  "scripts": {
    "prepublishOnly": "echo prepublish"
  },
  "prettier": {}
}
